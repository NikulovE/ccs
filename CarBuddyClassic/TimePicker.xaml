<UserControl x:Name="UserControl" x:Class="CCS.Classic.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:CCS.Classic"
             Height="Auto" Width="Auto"  >
    <Grid x:Name="LayoutRoot" Margin="2">

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="41"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="41"/>


        </Grid.ColumnDefinitions>

        <ComboBox SelectedValue="{Binding Hours, ElementName=UserControl, Mode=Default}" Background="{x:Null}" IsReadOnly="True" ItemsSource="{Binding HoursArr, ElementName=UserControl, Mode=Default}" SelectionChanged="ComboBox_SelectionChanged"/>

        <ComboBox SelectedValue="{Binding Minutes, ElementName=UserControl, Mode=Default}" Background="{x:Null}" IsReadOnly="True" Grid.Column="2" ItemsSource="{Binding MinutesArr, ElementName=UserControl, Mode=Default}" SelectionChanged="ComboBox_SelectionChanged"/>



    </Grid>
</UserControl>
