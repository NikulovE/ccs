@model AppWeb.Models.ProfileRegistration

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Logo</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", null, "About")</li>
                    <li>@Html.ActionLink("Downloads", "Index", "Downloads") </li>
                    <li>@Html.ActionLink("Feedback", "Index", "Feedback")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Login", null, "Login")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row content">
            </div>

            <div class="col-sm-9" >
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    @ViewBag.Error
                    <div class="text-center">
                        <p>Email: @Html.TextBoxFor(x => x.Email, new { @class = "text-left" })</p>
                        <div class="text-center">
                            <input type="submit" value="Continue" class="btn btn-success" />
                        </div>
                        
                    </div>
                }
        </div>
    </div>

    <footer class="container-fluid text-left navbar-fixed-bottom">
        <p>Evgeniy Nikulov</p>
    </footer>
</body>
</html>