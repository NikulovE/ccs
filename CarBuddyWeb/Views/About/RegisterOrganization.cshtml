
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>How to register organization</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Logo</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="active">@Html.ActionLink("About", null, "About")</li>
                    <li>@Html.ActionLink("Downloads", "Index", "Downloads") </li>
                    <li>@Html.ActionLink("Feedback", "Index", "Feedback")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @*<li>@Html.ActionLink("Login", null, "Login")</li>*@
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row content">
            <div class="col-sm-3">
                <p>@Html.ActionLink("Privacy policy", "PrivacyPolicy")</p>
                <p>@Html.ActionLink("Terms of use", "TermsOfUse")</p>
                <p>@Html.ActionLink("Statistics", "Statistics")</p>
                <p>@Html.ActionLink("How To", "HowTo")</p>
            </div>

            <div class="col-sm-9">
                <h1>Register organization</h1>
                <p />In menu "Organizations" click "Register organization" then input your organization`s name and your organization`s mailbox. This mailbox will not be stored in any place.
                <br />
                <img src="~/Content/Images/HowTo/RegOrg/InputOrgName.PNG" />
                <p />Check your organization mailbox and find code. Input this code and click "register organization".
                <br />
                <img src="~/Content/Images/HowTo/RegOrg/Success.PNG" />
                <p />Organization will be moderated.
                <br />
                <img src="~/Content/Images/HowTo/RegOrg/AfterApproval.PNG" />
                <p />You can find your organization after proval.
                <br />
                <img src="~/Content/Images/HowTo/RegOrg/TwoOrg.PNG" />
                <p />You can register more than one organization.    

            </div>
        </div>
    </div>

    <footer class="container-fluid text-left navbar-fixed-bottom">
        <p>Evgeniy Nikulov</p>
    </footer>
</body>
</html>
